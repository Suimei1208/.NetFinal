@model NetTechnology_Final.Models.Accounts

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/generalize.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/background.css" asp-append-version="true" />

<h1>Edit</h1>

<h4>Accounts</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 top">
        <form asp-action="Edit" asp-controller="Accounts" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="text-align: center;">
                    <img src="@Model.Avatar" alt="Current Avatar" class="img-thumbnail" style="border-radius: 50%; width: 250px; height: 250px; object-fit: cover; display: inline-block;" />
                    <label asp-for="AvatarFile" style="display: block; text-align: left;">Avatar</label>
                    <input asp-for="AvatarFile" type="file" class="form-control" style="display: block;">
                </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="username" class="control-label">Username</label>
                <input asp-for="username" class="form-control" disabled required/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" disabled required/>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    <option value="Salesperson">Sale Person</option>
                    <option value="Admin">Administrator</option>
                    <option value="Customer">Customer</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Active">Active</option>
                    <option value="InActive">InActive</option>
                    <option value="Block">Block</option>
                </select>
                <span asp-validation-for="Status" class="text-primary"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> 
            </div>
        </form>
    </div>
</div>

<div class="action-links">
    <a asp-action="List" class="btn btn-secondary">Back to List</a> 
</div>

